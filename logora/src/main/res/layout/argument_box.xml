<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/box_background">

    <RelativeLayout
        android:id="@+id/argument_author_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/user_icon_content_description" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/argument_author_name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_image_container"
            android:paddingVertical="14dp">

            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:text="@string/user_box_full_name" />

            <RelativeLayout
                android:id="@+id/user_level_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_full_name">

                <TextView
                    android:id="@+id/user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:text="@string/user_box_level" />

                <ImageView
                    android:id="@+id/user_level_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@id/user_level"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/user_icon_content_description" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/argument_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:id="@+id/argument_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debate_first_position"
                android:layout_alignRight="@id/argument_date"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:background="@drawable/position_background"
                android:padding="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/argument_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/argument_position"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:textSize="11sp"
                android:text="14/04/21" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/argument_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/argument_author_image_container"
        android:layout_marginVertical="6dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/argument_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/argument_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/argument_content_container"
        android:orientation="horizontal"
        android:layout_marginVertical="6dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
       >

        <com.logora.logora_android.views.ArgumentVote
            android:id="@+id/argument_vote_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:gravity="center" />

        <ImageView
            android:id="@+id/argument_reply_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:src="@drawable/ic_reply"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/argument_reply_icon_content_description"
            android:layout_toEndOf="@id/argument_votes_count"
            app:tint="@color/text_secondary" />

        <ImageView
            android:id="@+id/argument_share_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:src="@drawable/ic_share"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/share_icon_content_description"
            android:layout_toEndOf="@id/argument_reply_button"
            app:tint="@color/text_secondary" />

        <ImageView
            android:id="@+id/argument_more_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:src="@drawable/ic_more"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/argument_more_icon_content_description"
            android:layout_toEndOf="@id/argument_share_button"
            app:tint="@color/text_secondary" />

    </LinearLayout>
</RelativeLayout>