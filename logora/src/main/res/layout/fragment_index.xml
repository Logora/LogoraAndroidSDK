<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5dp"
    android:paddingHorizontal="12dp"
    android:orientation="vertical"
    tools:context=".IndexFragment">

    <com.logora.logora_android.TextWrapper
        android:id="@+id/main_debate_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textKey="headerMainDebate"
        android:text="@string/headerMainDebate" />

    <com.logora.logora_android.TextWrapper
        android:id="@+id/trending_debates_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textKey="headerTrendingDebates"
        android:text="@string/headerTrendingDebates"
        android:layout_below="@id/main_debate_header"/>

    <Spinner
        android:id="@+id/sort_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trending_debates_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trending_debates_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_select"
        android:nestedScrollingEnabled="false"
        android:dividerHeight="5dp" />

    <Button
        android:id="@+id/pagination_button"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/trending_debates_list"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Voir plus de dÃ©bats" />

    <ProgressBar
        android:id="@+id/trending_debates_loader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pagination_button"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@android:color/black" />

</RelativeLayout>