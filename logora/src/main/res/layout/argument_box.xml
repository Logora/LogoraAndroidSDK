<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="14dp"
    android:paddingHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:orientation="vertical"
    android:background="@drawable/box_background">

    <RelativeLayout
        android:id="@+id/argument_author_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/user_icon_content_description" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/argument_author_name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_image_container"
            android:paddingHorizontal="15dp"
            android:paddingVertical="0dp">

            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:text="@string/user_box_full_name" />

            <RelativeLayout
                android:id="@+id/user_level_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_full_name">

                <TextView
                    android:id="@+id/user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:text="@string/user_box_level" />

                <ImageView
                    android:id="@+id/user_level_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@id/user_level"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/user_icon_content_description" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/argument_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/argument_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/argument_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/argument_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/argument_author_image_container"
        android:layout_marginVertical="6dp">

        <TextView
            android:id="@+id/argument_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/argument_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/argument_content_container"
        android:layout_marginVertical="6dp">

        <ImageView
            android:id="@+id/argument_share_button"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_share"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/share_icon_content_description"
            app:tint="@color/text_secondary" />
        
    </RelativeLayout>
</RelativeLayout>